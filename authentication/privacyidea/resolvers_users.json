{
  "type": "ldapresolver",
  "LDAPURI": "ldap://<YOUR 1ST DC-SERVER>/ ldap://<YOUR 2ND DC-SERVER>/",
  "LDAPBASE": "<BASE-DN OF YOUR USER-ACCOUNTS>",
  "AUTHTYPE": "Simple",
  "BINDDN": "<SERVICE-ACCOUNT DN>",
  "BINDPW": "<SERVICE-ACCOUNT PASSWORD>",
  "TIMEOUT": 5,
  "CACHE_TIMEOUT": 120,
  "SIZELIMIT": 500,
  "LDAPSEARCHFILTER": "(sAMAccountName=*)(objectClass=user)(objectCategory=person)(!(userAccountControl:1.2.840.113556.1.4.803:=2))",
  "SCOPE": "SUBTREE",
  "LOGINNAMEATTRIBUTE": "sAMAccountName",
  "MULTIVALUEATTRIBUTES": ["mobile"],
  "USERINFO": "{ \"phone\" : \"telephoneNumber\", \"mobile\" : \"mobile\", \"email\" : \"otherMailbox\", \"surname\" : \"sn\", \"givenname\" : \"givenName\" }",
  "UIDTYPE": "dn",
  "NOREFERRALS": true,
  "NOSCHEMAS": true,
  "EDITABLE": false,
  "START_TLS": true,
  "TLS_VERIFY": true,
  "TLS_VERSION": 2,
  "SERVERPOOL_ROUNDS": 2,
  "SERVERPOOL_SKIP": 30
}
